<h1>Author: <%= @message.author %></h1>

<p>
  Message: <%= @message.content %>
</p>

<p>
  <%= @message.url  %>
</p>

<p>
  Created at: <%= @message.created_at %>
</p>

<hr/>
<a href="/messages">Back to All Messages</a>
<p>
Other posts from this author:
<hr/>
<% @messages.each do |message| %>
<div class="message">
    <h3><a href="/messages/<%= message.id %>"><small>(Author: <%= message.author %>)</small></h3></a>
    <p>
      <%= message.content %>
    </p>
    <p>
      Cool Url: <%= message.url %>
    </p>

    <p>
      Created at: <%= message.created_at %>
    </p>
  </div>
  <hr/>
<% end %>

</p>
